<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_for @category do |f| %>

<% unless @category.errors.empty? %>
  <div class="error">
    <%= @category.errors[:name].first %>
    </div>
<%end%>
  <%= f.label :name %>
  <%= f.text_field :name,  value: @category.name %>
<br>
<% unless @category.errors.empty? %>
  <div class="error">
    <%= @category.errors[:description].first %>
    </div>
<%end%>
  <%= f.label :description %>
  <%= f.text_field :description, value: @category.description %>
<br>

  <%= f.submit "Edit" %>
<% end %>